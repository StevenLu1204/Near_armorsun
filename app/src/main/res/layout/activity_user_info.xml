<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jay.fragmentbasics.UserInfo">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accepted"
            android:id="@+id/btn_accepted"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="0dp"
            android:singleLine="false"
            android:onClick="btnAccepted_click" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView_accepted"
            android:layout_marginTop="250dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Helped"
            android:id="@+id/btn_helped"
            android:layout_gravity="left|top"
            android:onClick="btnHelped_click"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="100dp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView_helped"
            android:layout_marginTop="250dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imgBtn_setting"
            android:layout_gravity="right|top"
            android:layout_marginTop="200dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/setting_icon"
            android:visibility="visible"
            android:contentDescription="settingIcon"
            android:clickable="true"
            android:onClick="imgBtnSetting_click"
            android:scaleType="fitCenter"
            android:padding="10dp"/>

    </FrameLayout>
</RelativeLayout>
